{% extends 'dashboard.html.twig' %}

{% block page_title %}Bénévoles{% endblock %}
{% block page_subtitle %}Gestion des bénévoles enregistrés{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title h4 mb-0">Liste des bénévoles</h1>
    <a href="{{ path('app_benevoles_new') }}" class="btn btn-primary d-flex align-items-center gap-2">
        <span class="material-symbols-rounded">person_add</span>
        Ajouter un bénévole
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Nom complet</th>
                        <th class="border-0">Email</th>
                        <th class="border-0">Téléphone</th>
                        <th class="border-0">Activités</th>
                        <th class="border-0 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for benevole in benevoles %}
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center gap-3">
                                {# La classe user-avatar est définie dans le CSS du template #}
                                <div class="user-avatar">{{ benevole.nom|slice(0,1)|upper }}</div>

                                <div class="fw-semibold">{{ benevole.nom }}</div>
                            </div>
                        </td>
                        <td class="text-muted">{{ benevole.email }}</td>
                        <td>{{ benevole.telephone|default('—') }}</td>
                        <td>
                            {# Utilisation d'un badge pour un style cohérent #}
                            <span class="badge bg-primary-subtle text-primary">{{ benevole.activites|length }}</span>
                        </td>
                        <td class="text-end pe-4">
                            <a href="{{ path('app_benevoles_show', {'id': benevole.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                <span class="material-symbols-rounded">visibility</span>
                            </a>
                            <a href="{{ path('app_benevoles_edit', {'id': benevole.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                <span class="material-symbols-rounded">edit</span>
                            </a>
                            <form method="post" action="{{ path('app_benevoles_delete', {'id': benevole.id}) }}" class="d-inline"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce bénévole ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ benevole.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <span class="material-symbols-rounded">delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <span class="material-symbols-rounded" style="font-size: 48px; opacity: 0.3;">groups</span>
                            <p class="mt-3 mb-0">Aucun bénévole enregistré</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
