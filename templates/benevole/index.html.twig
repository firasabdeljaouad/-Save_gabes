{% extends 'base.html.twig' %}

{% block title %}Liste des bénévoles{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h1 class="mb-4">Liste des bénévoles</h1>

        <a href="{{ path('app_benevoles_new') }}" class="btn btn-success mb-3">
            + Ajouter un bénévole
        </a>

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for b in benevoles %}
                <tr>
                    <td>{{ b.id }}</td>
                    <td>{{ b.nom }}</td>
                    <td>{{ b.email }}</td>
                    <td>{{ b.telephone }}</td>

                    <td>
                        <a href="{{ path('app_benevoles_show', {id: b.id}) }}" class="btn btn-info btn-sm">
                            Voir
                        </a>

                        <a href="{{ path('app_benevoles_edit', {id: b.id}) }}" class="btn btn-warning btn-sm">
                            Modifier
                        </a>

                        <form method="post" action="{{ path('app_benevoles_delete', {id: b.id}) }}"
                              style="display:inline-block"
                              onsubmit="return confirm('Êtes-vous sûr ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ b.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun bénévole trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
