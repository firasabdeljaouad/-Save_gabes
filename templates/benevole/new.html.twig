{% extends 'dashboard.html.twig' %}

{% block page_title %}Ajouter un Bénévole{% endblock %}
{% block page_subtitle %}Enregistrer un nouveau bénévole dans le système{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-4">
                <h3 class="h5 mb-0 d-flex align-items-center gap-2">
                    <span class="material-symbols-rounded">person_add</span>
                    Nouveau bénévole
                </h3>
            </div>
            <div class="card-body p-5">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}


                <div class="mb-4">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Ahmed Ben Salah'}}) }}
                    <div class="text-danger small mt-1">
                        {{ form_errors(form.nom, {'attr': {'class': 'text-danger small mt-1 d-block'}}) }}

                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'exemple@email.com'}}) }}
                    <div class="text-danger small mt-1">
                        {{ form_errors(form.email, {'attr': {'class': 'text-danger small mt-1 d-block'}}) }}

                    </div>
                </div>

                <div class="mb-5">
                    {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '+216 00 000 000'}}) }}
                    <div class="text-danger small mt-1">
                        {{ form_errors(form.telephone, {'attr': {'class': 'text-danger small mt-1 d-block'}}) }}

                    </div>
                </div>

                <div class="d-flex gap-3 mt-5">
                    <button type="submit" class="btn btn-success btn-lg px-5 d-flex align-items-center gap-2">
                        <span class="material-symbols-rounded">check_circle</span>
                        Enregistrer
                    </button>
                    <a href="{{ path('app_benevoles_index') }}" class="btn btn-outline-secondary btn-lg">
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
