{% extends 'dashboard.html.twig' %}

{% block page_title %}Détails du Bénévole{% endblock %}
{% block page_subtitle %}{{ benevole.nom }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-4">
                <h3 class="h5 mb-0 d-flex align-items-center gap-2">
                    <span class="material-symbols-rounded text-primary">person</span>
                    Profil du bénévole
                </h3>
                <a href="{{ path('app_benevoles_edit', {'id': benevole.id}) }}" class="btn btn-outline-warning btn-sm">
                    <span class="material-symbols-rounded">edit</span> Modifier
                </a>
            </div>
            <div class="card-body">
                <div class="text-center mb-5">
                    <div class="user-avatar mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                        {{ benevole.nom|first|upper }}
                    </div>
                    <h4 class="mb-1">{{ benevole.nom }}</h4>
                    <p class="text-muted">Bénévole actif</p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between py-3">
                        <span class="fw-semibold">Email</span>
                        <span class="text-muted">{{ benevole.email }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between py-3">
                        <span class="fw-semibold">Téléphone</span>
                        <span class="text-muted">{{ benevole.telephone|default('Non renseigné') }}</span>
                    </li>
                </ul>

                <div class="mt-5 text-center">
                    <a href="{{ path('app_benevoles_index') }}" class="btn btn-outline-secondary px-5">
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
