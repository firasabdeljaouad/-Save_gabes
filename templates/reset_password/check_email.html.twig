{% extends 'base.html.twig' %}

{% block title %}Vérifiez votre email - Save Gabes{% endblock %}

{% block body %}
    <!-- Conteneur plein écran avec background -->
    <div style="
        position: relative;
        width: 100%;
        height: 100vh;
        background-image: url('{{ asset('img/pollution-gabes-plages-interdites-1-2000px.jpg') }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        ">

        <!-- Overlay sombre -->
        <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 0;
    "></div>

        <!-- Message de confirmation -->
        <div style="
        position: relative;
        z-index: 1;
        width: 550px;
        max-width: 90%;
        padding: 40px;
        border-radius: 12px;
        background-color: rgba(245, 245, 220, 0.6);
        backdrop-filter: blur(8px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    ">
            <div class="text-center mb-4">
                <div style="font-size: 3rem; color: #28a745; margin-bottom: 1rem;">
                    <i class="fa fa-check-circle"></i>
                </div>
                <h2 style="color: #28a745;">Email envoyé!</h2>
                <p style="color: #555; font-size: 0.95rem; margin-top: 1rem;">
                    Un lien de réinitialisation a été envoyé à <strong>{{ email }}</strong>
                </p>
            </div>

            {% if resetToken %}
                <div class="alert alert-info" style="
                    background-color: rgba(255, 255, 255, 0.9);
                    border: 2px solid #17a2b8;
                    border-radius: 8px;
                    padding: 20px;
                    margin-bottom: 20px;
                ">
                    <h5 style="color: #17a2b8; margin-bottom: 15px;">
                        <i class="fa fa-info-circle"></i> Mode Développement
                    </h5>
                    <p style="color: #333; margin-bottom: 10px;">
                        Cliquez sur le lien ci-dessous pour réinitialiser votre mot de passe:
                    </p>
                    <a href="{{ path('app_reset_password', {token: resetToken}) }}" 
                       class="btn btn-primary w-100" 
                       style="
                           padding: 12px;
                           font-size: 1rem;
                           font-weight: 600;
                           border-radius: 8px;
                           background: linear-gradient(135deg, #17a2b8, #138496);
                           border: none;
                           color: white;
                           text-decoration: none;
                           display: inline-block;
                       ">
                        <i class="fa fa-key"></i> Réinitialiser mon mot de passe
                    </a>
                    <p style="color: #666; font-size: 0.85rem; margin-top: 10px; margin-bottom: 0;">
                        Ce lien expire dans 1 heure.
                    </p>
                </div>
            {% endif %}

            <div class="text-center">
                <a href="{{ path('app_login') }}" style="color: #28a745; text-decoration: none; font-weight: 500;">
                    <i class="fa fa-arrow-left"></i> Retour à la connexion
                </a>
            </div>
        </div>
    </div>
{% endblock %}
