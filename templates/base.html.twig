<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Symfony Website{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    />
    <!-- FontAwesome (required for icons) -->
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link
        rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
    <link
        rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}"/>
    <link
        rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}"/>
    <link
        rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/themify-icons.css') }}"/>

    <link rel="stylesheet" href="{{ asset('css/nice-select.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/flaticon.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/gijgo.css') }}"
    />
    <link
        rel="stylesheet" href="{{ asset('css/animate.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/slicknav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link
        rel="stylesheet" href="{{ asset('css/table-dash.css') }}"/>


</head>

<body>


<!-- üåê Navbar -->
{% if app.request.get('_route') != 'app_login' and app.request.get('_route') != 'app_register' %}

<header>

    <div class="header-area">
        <div class="header-top_area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-md-12 col-lg-8">
                        <div class="short_contact_list">
                            <ul>
                                <li><a href="#"><i class="fa fa-phone"></i> +1 (454) 556-5656</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> Yourmail@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6 col-lg-4">
                        <div class="social_media_links d-none d-lg-block">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-pinterest-p"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="sticky-header" class="main-header-area">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-3">
                        <div class="logo">
                            <a href="#">
                                <h2 style="color: white;">Save gabes</h2>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9">
                        <div class="main-menu">
                            <nav>
                                <ul id="navigation">
                                    <li><a href ="{{ path('app_home') }}">home</a></li>
                                    <li><a href="{{ path('app_about') }}">About</a></li>
                                    <li><a href="#">blog <i class="ti-angle-down"></i></a>
                                        <ul class="submenu">
                                            <li><a href="{{ path('app_blog') }}">blog</a></li>
                                            <li><a href="#">single-blog</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="#">pages <i class="ti-angle-down"></i></a>
                                        <ul class="submenu">
                                            <li><a href="#">elements</a></li>
                                            <li><a href="#">Cause</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="{{ path('app_contact') }}">Contact</a></li>
                                </ul>
                            </nav>
                            <div class="Appointment">
                                <div class="d-none d-lg-block">
                                    {% if app.user %}
                                        <div class="dropdown">
                                            <button class="btn btn-success dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: #28a745; border-color: #28a745; color: white; padding: 8px 20px; border-radius: 5px; font-weight: 500;">
                                                {% if app.user.avatar %}
                                                    <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="Avatar" style="width: 25px; height: 25px; border-radius: 50%; margin-right: 8px; object-fit: cover;">
                                                {% else %}
                                                    <i class="fa fa-user-circle" style="margin-right: 8px;"></i>
                                                {% endif %}
                                                {{ app.user.firstName }} {{ app.user.lastName }}
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-top: 8px;">
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('app_profile') }}" style="padding: 10px 20px;">
                                                        <i class="fa fa-user-circle" style="color: #28a745; margin-right: 10px;"></i> My Profile
                                                    </a>
                                                </li>
                                                {% if 'ROLE_ADMIN' in app.user.roles %}
                                                    <li>
                                                        <a class="dropdown-item" href="{{ path('dashboard') }}" style="padding: 10px 20px;">
                                                            <i class="fa fa-dashboard" style="color: #28a745; margin-right: 10px;"></i> Admin Dashboard
                                                        </a>
                                                    </li>
                                                {% endif %}
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('app_logout') }}" style="padding: 10px 20px; color: #dc3545;">
                                                        <i class="fa fa-sign-out" style="margin-right: 10px;"></i> Logout
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    {% else %}
                                        <a href="{{ path('app_login') }}" class="btn btn-success" style="background-color: #28a745; border-color: #28a745; color: white; padding: 8px 20px; border-radius: 5px; font-weight: 500; text-decoration: none;">
                                            <i class="fa fa-sign-in" style="margin-right: 8px;"></i>Login
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</header>
{% endif %}

<!-- üîπ Main Content -->

<main style="{% if app.request.get('_route') == 'app_login' or app.request.get('_route') == 'app_register' %}min-height: 100vh; display:flex; justify-content:center; align-items:center; background-color:#f0f8f5;{% endif %}">
    {% block body %}{% endblock %}
</main>


<!-- üîª FOOTER -->
{# Footer - cach√© sur login #}
{% if app.request.get('_route') != 'app_login' %}
    {% include 'partials/footer.html.twig' %}
{% endif %}

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
