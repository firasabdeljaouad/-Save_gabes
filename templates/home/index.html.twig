{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="slider_area">
        <div class="single_slider  d-flex align-items-center slider_bg_1 overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="slider_text ">
                            <span>Get Started Today.</span>
                            <h3>Help Gabes When They Need</h3>
                            <p>With so much to consume and such little time, coming up <br>
                                with relevant title ideas is essential</p>
                            <a href="{{ path('app_projets') }}" class="boxed-btn3">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Reason of Helping -->
    <div class="reson_area section_padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section_title text-center mb-55">
                        <h3><span>Reason of Helping</span></h3>
                    </div>
                </div>
            </div>

            {% set reasons = [
                {
                    'title': 'Collecting Fund',
                    'description': 'We raise money to support local projects that improve community life and provide essential services.',
                    'image': 'img/collecting_fund.jpg'
                },
                {
                    'title': 'Blood Camp',
                    'description': 'Organizing blood donation camps to help hospitals maintain life-saving blood supplies for emergencies.',
                    'image': 'img/blood_camp.jpg'
                },
                {
                    'title': 'Friendly Volunteer',
                    'description': 'Join our volunteers who dedicate their time to help those in need with kindness and compassion.',
                    'image': 'img/friendly_volunteer.jpg'
                }
            ] %}

            <div class="row justify-content-center">
                {% for reason in reasons %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="single_reson" style="position: relative; overflow: hidden; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                            <div class="thum_1"
                                 style="
                                   background-image: url('{{ asset(reason.image) }}');
                                   background-size: cover;
                                   background-position: center;
                                   height: 250px;
                                   position: relative;
                                 ">
                                <div style="
                                    position: absolute;
                                    bottom: 0;
                                    left: 0;
                                    width: 100%;
                                    background: linear-gradient(to top, rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.4));
                                    color: #fff;
                                    padding: 20px;
                                    font-weight: 600;
                                    ">
                                    <h4 style="margin: 0 0 8px 0;">{{ reason.title }}</h4>
                                    <p style="font-size: 1rem; line-height: 1.4;">
                                        {{ reason.description }}
                                    </p>
                                    <a href="#" class="read_more" style="color: #ffd700; text-decoration: underline; font-weight: 700;">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>






    <!-- Latest Benevoles -->
    <div class="container mt-5">
        <div class="section_title text-center mb-4">
            <h3><span class="text-success">Nos derniers bénévoles</span></h3>
        </div>

        {% if latestBenevoles is not empty %}
            <div class="row g-4">
                {% for benevole in latestBenevoles %}
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100 border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title text-success fw-bold">{{ benevole.nom }}</h5>
                                <p class="card-text mb-1">
                                    <i class="fas fa-envelope me-2 text-muted"></i>{{ benevole.email }}
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-phone me-2 text-muted"></i>{{ benevole.telephone }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-4">
<a href="{{ path('app_benevole_all') }}" class="btn btn-success btn-lg px-4">Voir tous les bénévoles</a>
            </div>
        {% else %}
            <p class="text-muted fst-italic text-center">Aucun bénévole enregistré.</p>
        {% endif %}
    </div>


    <!-- Les autres sections statiques (Popular Causes, Counter area...) -->
    <!-- Tu peux garder ton code tel quel ici -->

    <div class="popular_causes_area section_padding">
        <!-- ... ton contenu existant ... -->
    </div>

    <div class="counter_area">
        <!-- ... ton contenu existant ... -->
    </div>

{% endblock %}
