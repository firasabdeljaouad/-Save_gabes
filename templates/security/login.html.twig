{% extends 'base.html.twig' %}

{% block title %}Login - Save Gabes{% endblock %}

{% block body %}
    <!-- Conteneur plein écran avec background -->
    <div style="
        position: relative;
        width: 100%;
        height: 100vh; /* toute la hauteur de l'écran */
        background-image: url('{{ asset('img/pollution-gabes-plages-interdites-1-2000px.jpg') }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        ">

        <!-- Overlay sombre semi-transparent pour rendre le texte lisible -->
        <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 0;
    "></div>

        <!-- Formulaire centré -->
        <div style="
        position: relative;
        z-index: 1;
        width: 400px;
        max-width: 90%;
        padding: 40px;
        border-radius: 12px;
        background-color: rgba(245, 245, 220, 0.6); /* transparent */
        backdrop-filter: blur(8px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        display: flex;
        flex-direction: column;
        justify-content: center;
    ">
            <div class="text-center mb-4">
                <h2 style="color: #28a745;">Login</h2>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="_username" id="email" value="{{ last_username }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="_password" id="password" required>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>

                <!-- Google Login Button -->
                <div class="d-grid gap-2 mb-3">
                    <a href="#" class="btn btn-danger" style="display: flex; align-items: center; justify-content: center; gap: 8px;">
                        <svg width="18" height="18" xmlns="http://www.w3.org/2000/svg">
                            <g fill="#000" fill-rule="evenodd">
                                <path d="M9 3.48c1.69 0 2.83.73 3.48 1.34l2.54-2.48C13.46.89 11.43 0 9 0 5.48 0 2.44 2.02.96 4.96l2.91 2.26C4.6 5.05 6.62 3.48 9 3.48z" fill="#EA4335"/>
                                <path d="M17.64 9.2c0-.74-.06-1.28-.19-1.84H9v3.34h4.96c-.21 1.18-.84 2.18-1.79 2.86l2.84 2.2c1.7-1.57 2.68-3.88 2.68-6.56z" fill="#4285F4"/>
                                <path d="M3.88 10.78A5.54 5.54 0 0 1 3.58 9c0-.62.11-1.22.29-1.78L.96 4.96A9.008 9.008 0 0 0 0 9c0 1.45.35 2.82.96 4.04l2.92-2.26z" fill="#FBBC05"/>
                                <path d="M9 18c2.43 0 4.47-.8 5.96-2.18l-2.84-2.2c-.76.53-1.78.9-3.12.9-2.38 0-4.4-1.57-5.12-3.74L.96 13.04C2.45 15.98 5.48 18 9 18z" fill="#34A853"/>
                            </g>
                        </svg>
                        Login with Google
                    </a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>

            <div class="text-center mt-3">
                <a href="{{ path('app_forgot_password_request') }}" style="color: #28a745; text-decoration: none; font-weight: 500;">
                    <i class="fa fa-key"></i> Mot de passe oublié ?
                </a>
            </div>

            <div class="mt-3 text-center">
                <a href="{{ path('app_register') }}" style="color: white;">Créer un compte</a>
            </div>
        </div>
    </div>
{% endblock %}
