{% extends 'dashboard.html.twig' %}

{% block title %}Liste des Activités{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des Activités</h1>

    <a href="{{ path('app_activite_new') }}" class="btn btn-primary mb-3">
        Créer une nouvelle activité
    </a>
    php -S 127.0.0.1:8000 -t public
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                <td>{{ activite.titre }}</td>
                <td>{{ activite.description }}</td>
                <td>{{ activite.date|date('Y-m-d') }}</td>
                <td>{{ activite.lieu }}</td>
                <td>
                    <a class="btn btn-sm btn-info"
                       href="{{ path('app_activite_show', { id: activite.id }) }}">Voir</a>

                    <a class="btn btn-sm btn-warning"
                       href="{{ path('app_activite_edit', { id: activite.id }) }}">Modifier</a>

                    <form method="post"
                          action="{{ path('app_activite_delete', { id: activite.id }) }}"
                          style="display:inline-block"
                          onsubmit="return confirm('Supprimer ?');">
                        <input type="hidden" name="_token"
                               value="{{ csrf_token('delete' ~ activite.id) }}">
                        <button class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune activité trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
