{% extends 'dashboard.html.twig' %}

{% block page_title %}Activités{% endblock %}
{% block page_subtitle %}Gestion des activités programmées{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title h4 mb-0">Liste des activités</h1>
    <a href="{{ path('app_activite_new') }}" class="btn btn-primary d-flex align-items-center gap-2">
        <span class="material-symbols-rounded">add_circle</span>
        Nouvelle activité
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Titre</th>
                        <th class="border-0">Lieu</th>
                        <th class="border-0">Date</th>
                        <th class="border-0">Bénévoles</th>
                        <th class="border-0 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for activite in activites %}
                    <tr>
                        <td class="ps-4 fw-semibold">{{ activite.titre }}</td>
                        <td class="text-muted">{{ activite.lieu }}</td>
                        <td>{{ activite.date|date('Y-m-d H:i') }}</td>
                        <td>
                            <span class="badge bg-primary-subtle text-primary">
                                {{ activite.benevoles|length }}
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <a href="{{ path('app_activite_show', {'id': activite.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                <span class="material-symbols-rounded">visibility</span>
                            </a>
                            <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                <span class="material-symbols-rounded">edit</span>
                            </a>
                            <form method="post" action="{{ path('app_activite_delete', {'id': activite.id}) }}" class="d-inline"
                                  onsubmit="return confirm('Supprimer cette activité ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <span class="material-symbols-rounded">delete</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <span class="material-symbols-rounded" style="font-size: 48px; opacity: 0.3;">event_busy</span>
                            <p class="mt-3 mb-0">Aucune activité enregistrée</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
