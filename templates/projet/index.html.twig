{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <!-- popular_causes_area_start  -->
    <br>
    <div class="popular_causes_area pt-120">
        <h1>Our Projects</h1>
        <div class="container">
            <div class="row">

                {% for projet in projets %}
                    <div class="col-lg-4 col-md-6">
                        <div class="single_cause">
                            <div class="thumb">
                                <img src="{{ asset('uploads/imgsProject/' ~ projet.image) }}" alt="{{ projet.name }}">
                            </div>
                            <div class="causes_content">
                                <div class="custom_progress_bar">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">
                                            <span class="progres_count">30%</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="balance d-flex justify-content-between align-items-center">
                                    <span>Goal: {{ projet.TargetAmount }} </span>
                                </div>

                                <b>Start : {{ projet.startDate|date('Y-m-d') }}</b>
                                <b>End : {{ projet.endDate|date('Y-m-d') }}</b>
                                <br>

                                <a href="cause_details.html"><h4>{{ projet.name }}</h4></a>
                                <p>{{ projet.description }}</p>
                                <a class="read_more" href="{{ path('app_cause_details', { id: projet.id }) }}">Read More</a>
                                <br>

                                <a role="button" class="btn btn-primary" href ="{{ path('app_project_donate',{id:projet.id}) }}">Donaite</a> <br>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    <!-- popular_causes_area_end  -->

{% endblock %}

