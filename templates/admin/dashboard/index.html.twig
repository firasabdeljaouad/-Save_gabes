{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Admin{% endblock %}

{% block breadcrumb %}Dashboard{% endblock %}

{% block page_title %}Dashboard{% endblock %}

{% block page_subtitle %}Overview of platform statistics and recent activity{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stats-hero {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }

        .stats-hero h2 {
            font-weight: 700;
            margin-bottom: 0.25rem;
            color: #312e81;
        }

        .stats-hero p {
            color: #6b7280;
            max-width: 480px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .pastel-card {
            border: none;
            border-radius: 18px;
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(250, 245, 255, 0.9), rgba(236, 254, 255, 0.9));
            box-shadow: 0 10px 40px rgba(15, 23, 42, 0.08);
        }

        .pastel-card h5 {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #4c1d95;
        }

        .gender-chart-wrapper {
            position: relative;
            width: 100%;
            max-width: 320px;
            margin: 0 auto;
        }

        .timeline {
            margin: 0;
            padding-left: 1rem;
            border-left: 2px dashed rgba(148, 163, 184, 0.6);
        }

        .timeline-item {
            position: relative;
            padding-left: 1.5rem;
            margin-bottom: 1.25rem;
        }

        .timeline-dot {
            position: absolute;
            left: -11px;
            top: 6px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: #c084fc;
            border: 3px solid white;
            box-shadow: var(--shadow-sm);
        }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

        .timeline-title {
            font-weight: 600;
            color: #312e81;
            font-size: 0.9375rem;
        }

        .timeline-meta {
            font-size: 0.85rem;
            color: #6b7280;
            margin-top: 0.25rem;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stats-hero {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="stats-hero">
        <div>
            <h2>Dashboard Overview</h2>
            <p>Monitor platform statistics, user demographics, and recent account activity at a glance.</p>
        </div>
        <div class="pastel-card flex-grow-1">
            <h5>Total Users</h5>
            <div style="font-size:2.5rem;font-weight:700;color:#0f172a;">{{ totalUsers }}</div>
            <p class="mb-0" style="color:#475569;">{{ genderCounts.female }} women • {{ genderCounts.male }} men • {{ genderCounts.other }} other</p>
        </div>
    </div>

    <div class="stats-grid">
        <div class="pastel-card">
            <h5>Users by Gender</h5>
            <p class="text-muted" style="font-size:0.875rem;margin-bottom:1rem;">Visualize the gender balance across the platform.</p>
            <div class="gender-chart-wrapper">
                <canvas id="genderChart" width="280" height="280" aria-label="Gender distribution chart" role="img"></canvas>
            </div>
        </div>
        <div class="pastel-card">
            <h5>Activity Timeline</h5>
            <p class="text-muted" style="font-size:0.875rem;margin-bottom:1rem;">Latest accounts created or updated.</p>
            <div class="timeline">
                {% if recentUsers is not empty %}
                    {% for activity in recentUsers %}
                        <div class="timeline-item">
                            <span class="timeline-dot"></span>
                            <div class="timeline-title">{{ activity.firstName }} {{ activity.lastName }}</div>
                            <div class="timeline-meta">
                                {{ activity.createdAt ? activity.createdAt|date('d M Y • H:i') : 'Date N/A' }}
                                · {{ activity.status|capitalize }}
                                · {{ 'ROLE_ADMIN' in activity.roles ? 'Admin' : 'User' }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="timeline-item">
                        <span class="timeline-dot"></span>
                        <div class="timeline-title">No activity yet</div>
                        <div class="timeline-meta">Add your first user to populate the timeline.</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const genderCounts = {{ genderCounts|json_encode|raw }};
        const chartContext = document.getElementById('genderChart');
        if (chartContext) {
            new Chart(chartContext, {
                type: 'pie',
                data: {
                    labels: ['Female', 'Male', 'Other'],
                    datasets: [{
                        data: [genderCounts.female, genderCounts.male, genderCounts.other],
                        backgroundColor: ['#f9a8d4', '#bfdbfe', '#fde68a'],
                        borderColor: '#ffffff',
                        borderWidth: 3,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { 
                                color: '#475569', 
                                usePointStyle: true,
                                padding: 15,
                                font: {
                                    size: 12,
                                    weight: '500'
                                }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: {
                                size: 14,
                                weight: '600'
                            },
                            bodyFont: {
                                size: 13
                            }
                        }
                    }
                }
            });
        }
    </script>
{% endblock %}

