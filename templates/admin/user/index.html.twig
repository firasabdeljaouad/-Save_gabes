{% extends 'dashboard.html.twig' %}

{% block title %}Users Management - Admin{% endblock %}

{% block breadcrumb %}Users{% endblock %}

{% block page_title %}Users Management{% endblock %}

{% block page_subtitle %}Manage platform users, create new accounts, edit or delete existing ones.{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .users-table-card {
            border-radius: 22px;
            border: 1px solid rgba(148, 163, 184, 0.2);
            box-shadow: 0 20px 60px rgba(15, 23, 42, 0.08);
            overflow: hidden;
        }

        .users-table-card .card-header {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .users-table-card thead {
            background: #f8fafc;
        }

        .users-table-card tbody tr {
            transition: background 0.2s ease;
        }

        .users-table-card tbody tr:hover {
            background: rgba(226, 232, 240, 0.4);
        }

        .status-badge {
            padding: 0.35rem 0.85rem;
            border-radius: 999px;
            font-weight: 600;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
        }

        .status-badge.active {
            background: rgba(134, 239, 172, 0.35);
            color: #166534;
        }

        .status-badge.inactive {
            background: rgba(148, 163, 184, 0.4);
            color: #475569;
        }

        .role-badge {
            background: rgba(196, 181, 253, 0.35);
            color: #5b21b6;
            border-radius: 999px;
            padding: 0.35rem 0.85rem;
            font-weight: 600;
            font-size: 0.75rem;
        }

        .role-badge.admin {
            background: rgba(248, 180, 217, 0.5);
            color: #be185d;
        }

        .btn-action {
            padding: 0.375rem 0.75rem;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .btn-add-user {
            background: linear-gradient(135deg, #a5b4fc, #c084fc);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.625rem 1.25rem;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .btn-add-user:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(165, 180, 252, 0.4);
            color: white;
        }

        /* Modal Styles */
        .modal-content {
            border-radius: 18px;
            border: none;
            box-shadow: 0 20px 60px rgba(15, 23, 42, 0.15);
        }

        .modal-header {
            background: linear-gradient(135deg, #fbcfe8, #e0f2fe);
            border-radius: 18px 18px 0 0;
            border-bottom: none;
            padding: 1.25rem 1.5rem;
        }

        .modal-header .btn-close {
            background: none;
            opacity: 0.7;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid rgba(148, 163, 184, 0.2);
            padding: 1rem 1.5rem;
        }

        .modal-footer .btn-primary {
            background: linear-gradient(135deg, #a5b4fc, #c084fc);
            border: none;
            font-weight: 600;
        }

        .modal-footer .btn-primary:hover {
            background: linear-gradient(135deg, #c084fc, #a5b4fc);
        }


        .modal-backdrop {
            pointer-events: none !important;
            opacity: 0.05 !important;
        }

        .modal-backdrop.show {
            pointer-events: none !important;
            opacity: 0.05 !important;

        }

        .modal.show {
            pointer-events: auto !important;
        }

        .modal-content {
            pointer-events: auto !important;
        }
    </style>
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="users-table-card card">
        <div class="card-header">
            <div>
                <h5 class="mb-0">Users List</h5>
                <small class="text-muted">Create, update or delete any user entry.</small>
            </div>
            <button type="button" class="btn-add-user" onclick="loadCreateForm()">
                <i class="fa fa-plus"></i>
                Add New User
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Role</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <strong>{{ user.firstName }} {{ user.lastName }}</strong>
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phoneNumber ?: '—' }}</td>
                            <td>{{ user.sexe ? user.sexe|capitalize : '—' }}</td>
                            <td>
                                <span class="status-badge {{ user.status == 'active' ? 'active' : 'inactive' }}">
                                    {{ user.status|capitalize }}
                                </span>
                            </td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="role-badge admin">Admin</span>
                                {% else %}
                                    <span class="role-badge">User</span>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '—' }}</td>
                            <td class="text-end">
                                <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-outline-primary btn-action me-2">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <form action="{{ path('admin_user_delete', {id: user.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                    <button class="btn btn-sm btn-outline-danger btn-action">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No users found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Create User Modal #}
    <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="createUserForm" action="{{ path('admin_user_create') }}" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createUserModalLabel">
                            <i class="fa fa-user-plus me-2"></i>Create New User
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="createUserFormContainer">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submitCreateBtn">
                            <i class="fa fa-save me-2"></i>Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function loadCreateForm() {
            const modalElement = document.getElementById('createUserModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalElement);
            const formContainer = document.getElementById('createUserFormContainer');
            const form = document.getElementById('createUserForm');
            const submitBtn = document.getElementById('submitCreateBtn');

            // Show modal first
            modal.show();

            // Show loading
            formContainer.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
            submitBtn.disabled = true;

            // Load form via AJAX
            fetch('{{ path('admin_user_create') }}', {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.text();
            })
            .then(html => {
                // Insert form fields into container
                formContainer.innerHTML = html;
                submitBtn.disabled = false;

                // Re-enable form submission
                form.onsubmit = null;
            })
            .catch(error => {
                console.error('Error loading form:', error);
                formContainer.innerHTML = '<div class="alert alert-danger">Error loading form. Please refresh the page and try again.</div>';
                submitBtn.disabled = false;
            });
        }

        // Handle form submission
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('createUserForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();

                    const submitBtn = document.getElementById('submitCreateBtn');
                    const originalText = submitBtn.innerHTML;
                    const formContainer = document.getElementById('createUserFormContainer');

                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Creating...';

                    const formData = new FormData(form);

                    fetch(form.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => {
                        if (response.redirected) {
                            // Success - reload page
                            window.location.reload();
                        } else if (response.ok) {
                            // Check if response is HTML (form with errors) or redirect
                            return response.text().then(html => {
                                if (html.includes('createUserForm') || html.includes('form-control')) {
                                    // Form with errors
                                    formContainer.innerHTML = html;
                                    submitBtn.disabled = false;
                                    submitBtn.innerHTML = originalText;
                                } else {
                                    // Success message or redirect
                                    window.location.reload();
                                }
                            });
                        } else {
                            throw new Error('Server error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred. Please try again.');
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = originalText;
                    });
                });
            }
        });
    </script>
{% endblock %}
