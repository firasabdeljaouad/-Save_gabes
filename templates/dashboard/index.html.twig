{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="container mt-4">

        <h1 class="mb-4">Tableau de bord</h1>

        <!-- Cards -->
        <div class="row mb-4">

            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Bénévoles</h5>
                        <p class="card-text display-6">{{ benevoles_count }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Activités</h5>
                        <p class="card-text display-6">{{ activites_count }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Donations</h5>
                        <p class="card-text display-6">{{ donations_count }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Projets</h5>
                        <p class="card-text display-6">{{ projects_count }}</p>
                    </div>
                </div>
            </div>

        </div>

        <hr>

        <!-- Latest items -->

        <div class="row">

            <div class="col-md-6">
                <h3>Derniers bénévoles</h3>
                <ul class="list-group">
                    {% for b in last_benevoles %}
                        <li class="list-group-item">
                            {{ b.nom }} - {{ b.email }}
                        </li>
                    {% else %}
                        <li class="list-group-item">Aucun bénévole</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-6">
                <h3>Dernières activités</h3>
                <ul class="list-group">
                    {% for a in last_activites %}
                        <li class="list-group-item">{{ a.titre }} - {{ a.lieu }}</li>
                    {% else %}
                        <li class="list-group-item">Aucune activité</li>
                    {% endfor %}
                </ul>
            </div>

        </div>

    </div>

{% endblock %}
